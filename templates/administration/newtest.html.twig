    <!-- Tab panes -->
    <div class="tab-content">
        <div id="home" class="container tab-pane active"><br>
            <div id="test-type{{ id }}" class="row">
                <div id="type-check{{ id }}" class="col-md-5 test-type active" onclick="changeType({{ id }},'check')">
                    <div class="row">
                        <div class="col-md-3"><i class="material-icons type-icon"  >check_box</i></div>
                        <div class="col-md-8"><p class="checkbox-header">Checkbox</p>
                        </div>
                    </div>
                    <hr>
                    <span style="text-align: center">Réponse par oui ou non</span>
                </div>
                <div id="type-select{{ id }}" class="col-md-5 test-type" onclick="changeType({{ id }},'select')">
                    <div class="row">
                        <div class="col-md-3"><i  class="material-icons type-icon" >radio_button_checked</i></div>
                        <div class="col-md-8"><p class="checkbox-header">Sélection</p>
                        </div>
                    </div>
                    <hr>
                    <span style="text-align: center">Réponse à choix multiples</span>
                </div>
            </div>
        </div>
        <div id="menu1" class="container tab-pane fade"><br>
