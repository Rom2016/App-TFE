<div id="test{{ id }}" class="yolo">
    <div class="row">
        <div class="modify-test col-md-10 input-group mb-3">
            <span class="editable suggestion">{{ test.test }}</span>
            <div class="input-group-append">
                <i id='trigger{{ id }}' onclick="slidePanel({{ id }})" class="material-icons test-edit">edit</i>
            </div>
        </div>
        <div class="col-md-1"></div>
        <div class="col-md-1">
            <div class="btn-group">
                                                                                <span class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                                                    {{ test.priority }}
                                                                                </span>
                <div class="dropdown-menu dropdown-menu-right">
                    <span class="dropdown-item">1</span>
                    <span class="dropdown-item">2</span>
                    <span class="dropdown-item">3</span>
                </div>
            </div>
        </div>
    </div>
    <div class="slider" id='slider{{ id }}'>
        <h3>{{ test.test }}</h3>
        <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item">
                <a class="nav-link-test active" data-toggle="tab" href="#type{{ id }}">Type</a>
            </li>
            <li class="nav-item">
                <a class="nav-link-test" data-toggle="tab" href="#familly{{ id }}">Famille</a>
            </li>
            <li class="nav-item">
                <a class="nav-link-test" data-toggle="tab" href="#solution{{ id }}">Ajouter une solution</a>
            </li>
            <li class="nav-item">
                <a class="nav-link-test" data-toggle="tab" href="#log{{ id }}">Historique</a>
            </li>
        </ul>

        <!-- Tab panes -->
        <div class="tab-content">
            <div id="type{{ id }}" class="container tab-pane active"><br>
                <div id="test-type{{ id }}" class="">

                    {% if test.type.type =='Question' %}
                        <div class="col-md-2"></div>
                        <div id="type-check{{ id }}" class="col-md-8 test-type">
                            <div class="row">
                                <div class="col-md-4"><i class="material-icons type-icon"  >check_box</i></div>
                                <div class="col-md-8"><p class="checkbox-header">Checkbox</p>
                                </div>
                            </div>
                            <hr>
                            <span style="text-align: center">Réponse par oui ou non</span>
                        </div>
                    {% elseif test.type.type =='Selection' %}
                        <div class="col-md-2"></div>

                        <div id="type-select{{ id }}" class="col-md-8 test-type">
                            <div class="row">
                                <div class="col-md-4"><i  class="material-icons type-icon" >radio_button_checked</i></div>
                                <div class="col-md-8"><p class="checkbox-header">Sélection</p>
                                </div>
                            </div>
                            <hr>
                            <span style="text-align: center">Réponse à choix multiples</span>
                        </div>
                        <div id="group-selection{{ id }}" >
                        </div>

                        <div class="row">
                            <div id="group-select{{ id }}" class="group-select col-md-10">
                                <div class="input-group">
                                    <input class="form-control" id="new-select{{ id }}" type="text" placeholder="Ajouter un choix">
                                    <button class="add-button select">+</button>
                                </div>
                            </div>
                        </div>

                    {% endif %}
                </div>
            </div>
            <div id="familly{{ id }}" class="container tab-pane fade"><br>
                <div class="row">
                    <div class="col-md-10"></div>

                    <div class="nav-item dropdown col-md-1">
                        <a class="nav-link" id="navbarDropdownMenuAccount" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons audit-more">add</i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuAccount">
                            <a id="add-child" class="dropdown-item"><i class="material-icons">note_add</i>Ajouter un enfant checkbox</a>
                            <a id="add-child" class="dropdown-item"><i class="material-icons">note_add</i>Ajouter un enfant checkbox</a>
                        </div>
                    </div>
                </div>
                <div id="group-child{{ id }}">
                </div>
                <div class="row">
                    <div id="group-child{{ id }}" class="group-child col-md-12">
                        <div class="input-group">
                            <input class="form-control child" id="new-child{{ id }}" type="text" placeholder="Ajouter un enfant">
                            <button class="add-button child">+</button>
                        </div>
                    </div>
                </div>
            </div>
            <div id="solution{{ id }}" class="container tab-pane fade"><br>
            </div>
        </div>
    </div>
</div>