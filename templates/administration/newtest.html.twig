<div class="row">
    <div class="col-md-10 input-group mb-3">
        <span class="editable suggestion">{{ test }}</span>
        <div class="input-group-append">
            <i id='trigger{{ id }}' onclick="slidePanel({{ id }})" class="material-icons test-edit">edit</i>
        </div>
    </div>
    <div class="col-md-1"></div>
    <div class="col-md-1">
        <select class="form-control" name="test_phase[1][prio]">
            <option>1</option>
            <option>2</option>
            <option>3</option>
        </select>
    </div>
</div>
<div class="slider" id='slider{{ id }}'>
    <ul class="nav nav-tabs" role="tablist">
        <li class="nav-item">
            <a class="nav-link-test active" data-toggle="tab" href="#home">Type</a>
        </li>
        <li class="nav-item">
            <a class="nav-link-test" data-toggle="tab" href="#menu1">Famille</a>
