                                                                            {% else %}
                                                                                <option>{{ s.selection }}</option>
                                                                            {% endif %}
                                                                        {% endfor %}
                                                                    </select>

                                                                </div>
                                                            </div>
                                                            <div class="col-md-3 comment">
                                                                <span class="editable">/</span>
                                                            </div>
                                                            <div class="col-md-3 comment">
                                                                {% if t.solution is null %}
                                                                    <span class="editable">/</span>
                                                                {% else %}
                                                                    <span class="editable">{{ t.solution }}</span>
                                                                {% endif %}
                                                            </div>
                                                        </div>

                                                    {% endif %}

                                                {% endfor %}
                                            {% endif %}
                                        {% endfor %}
                                    </div>
                                    {% set active = 1 %}
                                {% endfor %}
                            </div>
                        </div>
                    </div>
