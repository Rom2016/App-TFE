{% extends 'base.html.twig' %}

{% block title %}

    Accueil

{% endblock %}



{% block body %}

    {{ parent() }}
        <!-- page content -->
    <div class="right_col" role="main">
        <div class="container">
            <div class="row" >
                <div class="col-xs-12 col-md-12 text-center" style="background-color: white; padding: 5%">
                    <h1>Securicheck</h1>
                </div>
            </div>
            <div class="row tile_count">
                <div class="col-md-3 col-sm-4 col-xs-6 tile_stats_count text-center">
                    <span class="count_top"><i class="fa fa-users"></i> Utilisateurs enregistrés</span>
                    <div class="count green">{{ nbUser }}</div>
                </div>
                <div class="col-md-3 col-sm-4 col-xs-6 tile_stats_count text-center">
                    <span class="count_top"><i class="fa fa-file"></i>Audits enregistrés</span>
                    <div class="count green">{{ nbCompany }}</div>
                </div>
                <div class="col-md-3 col-sm-4 col-xs-6 tile_stats_count text-center">
                    <span class="count_top"><i class="fa fa-folder-open"></i>Total phase</span>
                    <div class="count green">{{ nbPhase }}</div>
                </div>
                <div class="col-md-3 col-sm-4 col-xs-6 tile_stats_count text-center">
                    <span class="count_top"><i class="fa fa-check-square-o"></i> Total test</span>
                    <div class="count green">{{ nbTest }}</div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
