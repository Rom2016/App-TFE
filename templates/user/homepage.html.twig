{% extends 'base.html.twig' %}

{% block title %}
    Tableau de bord
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .dash-header{
            background: white;
            padding: .5%;
        }

        .purple{
            color: purple;
        }
    </style>
{% endblock %}


{% block body %}

    {{ parent() }}
        <!-- page content -->
<div class="content">
    <div class="container-fluid">
        <div class="row dash-header">
            <h2>Tableau de bord</h2>
        </div>
        <div class="row">
            <div class="col-lg-4 col-md-6 col-sm-6">
                <div class="card card-stats">
                    <div class="card-header card-header-info card-header-icon">
                        <div class="card-icon">
                            <i class="material-icons">account_circle</i>
                        </div>
                        <p class="card-category">Utilisateurs enregistrés</p>
                        <h3 class="card-title purple" style="color: purple">{{ nbUser }}
                        </h3>
                    </div>
                    <div class="card-footer">
                        <div class="stats">
                            <i class="material-icons">link</i>
                            <a href="#pablo">Visualiser</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 col-sm-6">
                <div class="card card-stats">
                    <div class="card-header card-header-info card-header-icon">
                        <div class="card-icon">
                            <i class="material-icons">description</i>
                        </div>
                        <p class="card-category">Audits Créés</p>
                        <h3 class="card-title purple" style="color: purple">{{ nbCompany }}
                        </h3>
                    </div>
                    <div class="card-footer">
                        <div class="stats">
                            <i class="material-icons">link</i>
                            <a href="#pablo">Visualiser</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 col-sm-6">
                <div class="card card-stats">
                    <div class="card-header card-header-info card-header-icon">
                        <div class="card-icon">
                            <i class="material-icons">check_box</i>
                        </div>
                        <p class="card-category">Nombre de tests créés</p>
                        <h3 class="card-title purple" style="color: purple">{{ nbTest }}
                        </h3>
                    </div>
                    <div class="card-footer">
                        <div class="stats">
                            <i class="material-icons">link</i>
                            <a href="#pablo">Visualiser</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header card-header-warning">
                        <h3 class="card-title">Statistiques</h3>
                        <p class="card-category"></p>
                    </div>
                    <div class="card-body">
                        <canvas id="chartEmails"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
            <div class="card">
                <div class="card-header card-header-primary">
                    <h3 class="card-title">Audits réalisés</h3>
                    <p class="card-category"></p>
                </div>
                <div class="card-body">
                    <canvas id="chartAudit"></canvas>
                </div>
            </div>
        </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header card-header-info">
                        <h3 class="card-title">Prises de contact demandées</h3>
                        <p class="card-category"></p>
                    </div>
                    <div class="card-body">
                        <canvas id="chartAppoint"></canvas>
                    </div>
                </div>
            </div>

        </div>

        <div class="row">
            <div id="map"></div>
    </div>
</div>

{% endblock %}

